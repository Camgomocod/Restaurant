<Window x:Class="Restaurant.Presentation.LoginForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant.Presentation"
        mc:Ignorable="d"
        Title="LoginForm" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="WindowMouseDown"
        >
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Utilities/Background.jpg"
                        Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="14"
                BorderThickness="2"
                Opacity="0.8">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#39A0ED" Offset="0"/>
                    <GradientStop Color="#36F1CD" Offset="0.5"/>
                    <GradientStop Color="#4C6085" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#13C4A3" Offset="0"/>
                    <GradientStop Color= "#39A0ED" Offset="0.75"/>

                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LOG IN"
                               Foreground="#32322C"
                               FontSize="12"
                               FontFamily="Monserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"
                               />
                    <Button x:Name="btnMinimize"
                            BorderThickness="0"
                            Content="-"
                            Foreground="#32322C"
                            Grid.Column="1"
                            FontSize="16"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnMinimize_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#36F1CD"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#13C4A3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="0.5"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    <Button x:Name="btnClose"
                            Background="#4C6085"
                            BorderThickness="0"
                            Content="x"
                            Foreground="#36F1CD"
                            Grid.Column="2"
                            FontSize="10"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnClose_Click">
                        
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#32322C"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#13C4A3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                    CornerRadius="0.5"
                                    Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                              HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>

                <StackPanel Width="220"
                            Grid.Row="1"
                            Orientation="Vertical"
                            Margin="0,20,0,0">
                    <Image Source="/Utilities/logo.png" 
                            Width="100" 
                            Height="100" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,0"/>

                    <TextBlock Text="QuickBite"
                               Foreground="#32322c"
                               FontSize="22"
                               FontWeight="Medium"
                               FontFamily="Monserrat"
                               HorizontalAlignment="Center"/>

                    <TextBlock Text="Username"
                               Foreground="#32322c"
                               FontWeight="Medium"
                               FontSize="12"
                               FontFamily="Monserrat"
                               Margin="0,30,0,0"/>

                    <TextBox x:Name="txtUser"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Monserrat"
                             Background="FloralWhite"
                             Foreground="#32322c"
                             CaretBrush="#32322c"
                             BorderBrush="#32322c"
                             BorderThickness="0,0,0,3"
                             Margin="0,5,0,0">
                    </TextBox>

                    <TextBlock Text="Contraseña"
                               Foreground="#32322c"
                               FontWeight="Medium"
                               FontSize="12"
                               FontFamily="Monserrat"
                               Margin="0,15,0,0"/>

                    <PasswordBox x:Name="txtPassword"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Monserrat"
                             Background="FloralWhite"
                             Foreground="#32322c"
                             CaretBrush="#32322c"
                             BorderBrush="#32322c"
                             BorderThickness="0,0,0,3"
                             Margin="0,5,0,0">
                    </PasswordBox>
                    <Button x:Name="btnLogin"
                            BorderThickness="0"
                            Content="LOG IN"
                            Foreground="#32322C"
                            Grid.Column="1"
                            FontSize="12"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Click="BtnMinimize_Click"
                            Margin="0,30,0,0">          
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#36F1CD"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#13C4A3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="100" Height="25"
                                CornerRadius="8"
                                Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <StackPanel Orientation="Horizontal"
                                Margin="0,15,0,0"
                                HorizontalAlignment="Center">
                        <TextBlock Text="¿Olvido la contraseña?"
                                   Foreground="#32322c"
                                   FontWeight="Medium"
                                   FontSize="11"
                                   FontFamily="Monserrat"
                                   HorizontalAlignment="Center"
                                   />
                        <TextBlock Text="Reset"
                                   Foreground="white"
                                   FontWeight="Medium"
                                   FontSize="12"
                                   FontFamily="Monserrat"
                                   HorizontalAlignment="Center"
                                   Cursor="Hand"
                                   Margin="8,0,0,0"/>
                    </StackPanel>
                    
                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
 